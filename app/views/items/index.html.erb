<h1>Blocitoff items</h1>

<h2>TO DO:</h2>

<% @todos.each do |t| %>
  <p>
    <strong><%= t.description %></strong>
    <small><%= link_to 'Edit', edit_item_path(t) %></small>
    <small><%= link_to "Mark as done", item_path(id: t.id, item: {done: true}), action: 'update', method: 'put' %></small>
  </p>
<% end %>


<h2>DONE TODOS:</h2>

<% @todone.each do |t| %>
  <p>
    <strong><%= t.description %></strong>
    <small><%= link_to "Remove", t, :confirm => "It is ok to remove item from list?", :method => :delete %></small>
  </p>
<% end %>



<p><%= link_to "Add To Do", new_item_path %></p>
